<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E9F0"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/manrope_semibold"
        android:gravity="center"
        android:letterSpacing="0.4"
        android:text="PLAY"
        android:textColor="#4C566A"
        android:textSize="60sp" />

    <View
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="#4C566A"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/manrope_semibold"
        android:text="SELECT YOUR TOPIC"
        android:textColor="#4C566A"
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/btnAndroid"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Android SDK"
        android:fontFamily="@font/manrope_semibold"
        android:drawableLeft="@drawable/android"
        android:paddingLeft="20dp"
        android:textColor="#4C566A"
        android:background="@drawable/button3" />

    <Button
        android:id="@+id/btnOs"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Operating System"
        android:drawableLeft="@drawable/os"
        android:paddingLeft="20sp"
        android:textColor="#4C566A"
        android:fontFamily="@font/manrope_semibold"
        android:background="@drawable/button3" />

    <Button
    android:id="@+id/btnHtml"
    android:layout_width="300dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:text="HTML / CSS"
    android:drawableLeft="@drawable/html"
    android:paddingLeft="20sp"
    android:textColor="#4C566A"
    android:fontFamily="@font/manrope_semibold"
    android:background="@drawable/button3" />

    <Button
        android:id="@+id/btnGen"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="General Knowledge"
        android:drawableLeft="@drawable/book"
        android:paddingLeft="20sp"
        android:textColor="#4C566A"
        android:fontFamily="@font/manrope_semibold"
        android:background="@drawable/button3" />

</LinearLayout>